<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartaurant_kmutt.smartaurant.activity.owner.OwnerEditMenuActivity">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">
        <android.support.v7.widget.GridLayout
            app:columnCount="2"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="numberDecimal"
                app:layout_columnWeight="1"
                android:textSize="@dimen/listview_text_size"
                android:id="@+id/etTable"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_listView_one_row"
                android:hint="set table" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_listView_one_row"
                android:textSize="@dimen/listview_text_size"
                android:text="table"/>

            <EditText
                android:inputType="numberSigned"
                app:layout_columnWeight="1"
                android:textSize="@dimen/listview_text_size"
                android:id="@+id/etVat"
                android:layout_width="100dp"
                android:layout_height="@dimen/height_listView_one_row"
                android:hint="Set vat" />
            <TextView
                android:layout_height="@dimen/height_listView_one_row"
                android:textSize="@dimen/listview_text_size"
                android:text="%"/>
        </android.support.v7.widget.GridLayout>

        <Button
            android:layout_margin="20dp"
            android:id="@+id/btSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button"
            android:text="Save" />
    </LinearLayout>








</RelativeLayout>
