<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:padding="100dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.owner.OwnerActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvVoucherCode"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_weight="1"
            android:text="test"
            android:textSize="@dimen/listview_text_size"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_listView_one_row" />
        <Button
            android:id="@+id/btCopy"
            android:visibility="invisible"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:textSize="@dimen/listview_text_size"
            android:backgroundTint="@color/colorPrimary"
            android:text="Copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="3">

      <Button
          android:id="@+id/bt50"
          android:textSize="@dimen/listview_text_size"
          app:layout_rowWeight="1"
          app:layout_columnWeight="1"
          android:theme="@style/ThemeOverlay.AppCompat.Dark"
          android:backgroundTint="@color/colorPrimary"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:textAllCaps="false"
          android:text="50 Baht"/>
        <Button
            android:id="@+id/bt100"
            android:textSize="@dimen/listview_text_size"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:text="100 Baht"/>
        <Button
            android:id="@+id/bt150"
            android:textSize="@dimen/listview_text_size"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:text="150 Baht"/>
        <Button
            android:id="@+id/bt200"
            android:textSize="@dimen/listview_text_size"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:text="200 Baht"/>
        <Button
            android:id="@+id/bt500"
            android:textSize="@dimen/listview_text_size"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:text="500 Baht"/>
        <Button
            android:id="@+id/bt1000"
            android:textSize="@dimen/listview_text_size"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAllCaps="false"
            android:text="1000 Baht"/>

    </android.support.v7.widget.GridLayout>

</LinearLayout>
