<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartaurant_kmutt.smartaurant"
    android:screenOrientation="landscape">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity
            android:name=".activity.MenuActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.customer.CustomerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.StaffLoginActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".activity.customer.CustomerTableActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.cashier.CashierTableActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.cashier.CashierActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.owner.OwnerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".activity.owner.OwnerEditMenuActivity" />
        <activity
            android:name=".activity.owner.OwnerEditStaffActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.staff.StaffActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.staff.StaffCheckOrderActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.kitchen.KitchenActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.customer.CustomerMenuActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity android:name=".activity.owner.OwnerDetailOrderListActivity"
            android:screenOrientation="landscape">

        </activity>
    </application>

</manifest>